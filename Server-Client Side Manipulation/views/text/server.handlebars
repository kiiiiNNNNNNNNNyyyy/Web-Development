 <div class="row">
 	<div class="col-sm-12">
 		<form class="server-form" method="post">
 			<div class="form-group">
 				<label for="text1">Main Text</label>
 				<textarea required class="form-control" id="text1" name="text1" placeholder="Enter your text here" value="{{text1}}"></textarea>
 			</div>
 			<div class="form-group">
 				<label for="text2">Text to be inserted: </label>
 				<input  required type="text" class="form-control" id="text2" name="text2" placeholder="Text to be inserted" value="{{text2}}">
 			</div>
 			<div class="form-group">
 				<label for="repition">Inserted Text should repeat for <input required type="number" name="number1" id="number1" value="{{number1}}"> time!</label>
 			</div>
 			<div class="form-group">
 				<label for="after">Inserted Text should repeat after <input required type="number" name="number2" id="number2" value="{{number2}}"> letters!</label>
 			</div>
 			<div class="form-group hidden" id="error-container">
 				<div class="alert alert-danger text-goes-here">
 				</div>
 			</div>
 			{{#if error }}
 			<div class="form-group">
 				<div class="alert alert-danger">
 					{{ error }}
 				</div>
 			</div>
 			{{/if}}
 			<div class="form-group">
 				<button type="submit" class="btn btn-primary">Submit</button>
 			</div>
 			{{#if result }}
 			<div class="form-group">
 				<div class="alert alert-success">
 					Your input : {{text1}}
 				</div>
 				<div class="alert alert-success">
 					The result is: {{ result }}
 				</div>
 			</div>
 			{{/if}}
 		</form>
 	</div>
 </div>